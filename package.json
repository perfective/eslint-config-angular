{
    "name": "@perfective/eslint-config-angular",
    "version": "0.5.0",
    "description": "ESLint shareable rules configuration for Angular",
    "keywords": [
        "angular",
        "code quality",
        "code standard",
        "code style",
        "eslint",
        "eslint-config",
        "lint",
        "perfective",
        "tslint",
        "tslint-config",
        "codelyzer",
        "typescript"
    ],
    "author": "Andrey Mikheychik <a.mikheychik@gmail.com>",
    "homepage": "https://github.com/perfective/eslint-config-angular",
    "repository": {
        "type": "git",
        "url": "https://github.com/perfective/eslint-config-angular.git"
    },
    "license": "MIT",
    "main": "./index.js",
    "directories": {
        "lib": "."
    },
    "files": [
        "**/*.js",
        "codelyzer/index.d.ts"
    ],
    "scripts": {
        "build": "tsc --project ./tsconfig.build.json",
        "build:clean": "npm run clean && npm run build",
        "clean": "rimraf *.tsbuildinfo **/*.d.ts **/*.js **/*.map",
        "lint": "npm run lint:eslint",
        "lint:eslint": "eslint --fix --ext .ts ./"
    },
    "dependencies": {
        "@perfective/eslint-config": "^0.8.0"
    },
    "peerDependencies": {
        "@angular-eslint/eslint-plugin": "^0.8.0-beta.2",
        "@angular-eslint/eslint-plugin-template": "^0.8.0-beta.2",
        "codelyzer": "^6.0.1",
        "eslint-plugin-jest-dom": "^3.3.0",
        "eslint-plugin-rxjs-angular": "^1.0.2",
        "eslint-plugin-testing-library": "^3.10.1"
    }
}
