{
    "name": "@perfective/eslint-config-angular",
    "version": "0.4.0-alpha.1",
    "description": "ESLint shareable rules configuration for Angular",
    "keywords": [
        "angular",
        "code quality",
        "code standard",
        "code style",
        "eslint",
        "eslint-config",
        "lint",
        "perfective",
        "tslint",
        "tslint-config",
        "codelyzer",
        "typescript"
    ],
    "author": "Andrey Mikheychik <a.mikheychik@gmail.com>",
    "homepage": "https://github.com/perfective/eslint-config-angular",
    "repository": {
        "type": "git",
        "url": "https://github.com/perfective/eslint-config-angular.git"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "directories": {
        "lib": "dist"
    },
    "files": [
        "dist",
        "tslint"
    ],
    "scripts": {
        "build": "tsc --project ./tsconfig.build.json",
        "build:clean": "npm run clean && npm run build",
        "clean": "rm -rf dist && rm -f *.tsbuildinfo",
        "lint": "npm run lint:eslint; npm run lint:tslint",
        "lint:eslint": "eslint --fix --ext .ts ./src",
        "lint:tslint": "tslint --fix --project ./tsconfig.lint.json"
    },
    "dependencies": {
        "@perfective/eslint-config": "^0.7.0-alpha.1"
    },
    "peerDependencies": {
        "@angular-eslint/eslint-plugin": "^0.3.0-beta.1",
        "@angular-eslint/eslint-plugin-template": "^0.3.0-beta.1",
        "codelyzer": "^5.2.2",
        "eslint-plugin-jest-dom": "^3.2.2",
        "eslint-plugin-rxjs-angular": "^0.0.2-beta.6"
    }
}
