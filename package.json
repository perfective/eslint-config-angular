{
    "name": "@perfective/eslint-config-angular",
    "version": "0.13.0",
    "description": "ESLint shareable rules configuration for Angular",
    "keywords": [
        "angular",
        "code quality",
        "code standard",
        "code style",
        "eslint",
        "eslint-config",
        "lint",
        "perfective",
        "tslint",
        "tslint-config",
        "typescript"
    ],
    "author": "Andrey Mikheychik <a.mikheychik@gmail.com>",
    "homepage": "https://github.com/perfective/eslint-config-angular",
    "repository": {
        "type": "git",
        "url": "https://github.com/perfective/eslint-config-angular.git"
    },
    "license": "MIT",
    "scripts": {
        "dist": "gulp",
        "lint": "npm run lint:eslint && npm run lint:prettier",
        "lint:eslint": "eslint --fix ./",
        "lint:prettier": "prettier --write .",
        "lint:prettier:build": "prettier --check .",
        "test": "jest",
        "test:build": "jest --clearCache && jest --collectCoverage"
    },
    "dependencies": {
        "@perfective/eslint-config": "~0.17.0"
    },
    "peerDependencies": {
        "@angular-eslint/eslint-plugin": "^13.1.0",
